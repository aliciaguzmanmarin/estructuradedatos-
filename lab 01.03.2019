#pragma once

class Triangulo

{

private :

       float base ;

       float altura ;

 

public:

       Triangulo(float _base, float _altura);

       float area ();

       ~Triangulo(void);

};

 

Triangulo.cpp*

#include "StdAfx.h"

#include "Triangulo.h"

 

Triangulo::Triangulo(float _base, float _altura)

{

       base=_base ;

       altura=_altura;

}

 

 

Triangulo::~Triangulo(void)

{

}

float   Triangulo :: area ()

{

       float A ;

       A=(base*altura)/2;

       return A ;

}

 

